<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="20">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="10">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/venezia"
            android:src="@drawable/venezia"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="10">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="50dp"
            android:id="@+id/clock"
            android:src="@drawable/clock"
            android:layout_gravity="center_vertical|bottom"
            android:layout_weight="3"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:weightSum="20">

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="2"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="15dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Ultima rilevazione effettuata:"
                android:id="@+id/lastDetection"
                android:textColor="#000000"
                android:layout_weight="2" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:text=""
                android:layout_gravity="center_vertical"
                android:textSize="13pt"
                android:layout_weight="16"
                android:id="@+id/hour"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="10">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="50dp"
            android:id="@+id/water"
            android:src="@drawable/boots"
            android:layout_gravity="center_vertical|bottom"
            android:layout_weight="3"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:weightSum="20">

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="2"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="15dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Ultima altezza rilevata:"
                android:id="@+id/lastHeight"
                android:textColor="#000000"
                android:layout_weight="2" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="15dp"
                android:text=""
                android:layout_gravity="center_vertical"
                android:textSize="13pt"
                android:layout_weight="16"
                android:id="@+id/height"
                android:textColor="#000000"
                android:textIsSelectable="true" />
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="9">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/prevision"
            android:src="@drawable/water"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_weight="2"
            android:layout_gravity="left"/>

        <Space
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="5.09" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/maps"
            android:src="@drawable/maps"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_weight="2" />

    </LinearLayout>

</LinearLayout>
